<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weighttracker">

    <!-- INTERNET for Flutter debugging -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Camera access for taking progress photos -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Microphone access for recording videos -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- For Android 13+ media access (images) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- For Android 12 and below: legacy storage permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Optional: To support Health APIs via Google Fit (needs integration) -->
    <!-- No direct permission like iOS HealthKit; depends on Google Fit APIs -->

    <application
        android:label="Weighttracker"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true">

        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Flutter Initialization -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

    </application>
</manifest>
